<?xml version="1.0"?>
<mvsim_world>
  <element class="ground_grid">
    <interval>1.0</interval>
  </element>

  <include file="$(ros2 pkg prefix mvsim)/share/mvsim/definitions/small_robot.vehicle.xml"/>

  <vehicle name="robot1" class="small_robot">
    <init_pose>0 0 0</init_pose>  <include file="$(ros2 pkg prefix mvsim)/share/mvsim/definitions/rgbd_camera.sensor.xml" 
       sensor_x="0.05" sensor_y="0" sensor_z="0.5" sensor_period_sec="0.10"/>
       
    <include file="$(ros2 pkg prefix mvsim)/share/mvsim/definitions/lidar2d.sensor.xml" 
       sensor_x="0.05" sensor_y="0" sensor_z="0.30" sensor_yaw="0" sensor_name="scan" 
       raytrace_3d="true" sensor_period_sec="0.10" viz_visibleLines="false" 
       sensor_nrays="300" fov_degrees="180"/>
  </vehicle>
</mvsim_world>
